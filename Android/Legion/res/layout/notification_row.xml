<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/fields_spacing_labels"
    android:paddingRight="@dimen/fields_spacing_labels"
    android:paddingTop="@dimen/fields_spacing_labels" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="2.5dip"
        android:background="@color/gray_half" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="l"
        android:text="7 pessoas curtiram seu comentÃ¡rio"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/lbl_font_size_default" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="14dip"
        android:gravity="right|center_vertical"
        android:tag="t"
        android:textColor="@color/gray_half_light"
        android:textSize="@dimen/lbl_font_size_tiny" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
